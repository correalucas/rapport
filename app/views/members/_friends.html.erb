<div class="my-3 p-3 bg-white rounded shadow-sm">
  <h6 class="border-bottom border-gray pb-2 mb-0"><%= member.first_name %>'s friends</h6>

  <% unless member.friends.any? %>
    <small class="d-block mt-3">
      <div class="alert alert-info"><%= member.first_name %> does not have any friends yet.</div>
    </small>
  <% end %>

  <% member.friends.each do |friend| %>
    <div class="media text-muted pt-3">
      <svg class="bd-placeholder-img mr-2 rounded" width="32" height="32" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Friend photo"><title>Friend photo</title><rect width="100%" height="100%" fill="#<%= random_color %>"></rect></svg>
      <div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
        <div class="d-flex justify-content-between align-items-center w-100">
          <strong class="text-gray-dark"><%= friend.name %></strong>
          <%= link_to profile_path(friend) do %>Profile<% end %>
        </div>
        <span class="d-block"><%= link_to friend.original_url, friend.original_url, target: '_blank' %></span>
      </div>
    </div>
  <% end %>
</div>